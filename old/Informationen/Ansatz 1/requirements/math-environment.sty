% Regular theorems
	% Structuring and style
	\theoremstyle{break}
	\theorembodyfont{\normalfont}
	\theoremsymbol{}
	\theoremseparator{} 	

	% Framed
	\newframedtheorem{sentence}{Sentence}[section]
	\newframedtheorem{lemma}[sentence]{Lemma}
	\newframedtheorem{axiom}[sentence]{Axiom}
	
	% Unframed	
	\newtheorem{prop}[sentence]{Proposition}
	\newtheorem{definition}[sentence]{Definition}
	\newtheorem{cor}[sentence]{Corollary}
	\newtheorem{example}[sentence]{Example}

% Proofs
	% Structuring and style
	\theoremstyle{nonumberbreak}
	\theorembodyfont{\normalfont}
	\theoremsymbol{\ensuremath{_\square}}
	\theoremseparator{} 	
	
	\newtheorem{proof}{Proof}           


% Unnumbered theorems
	% Structuring and style
	\theoremstyle{nonumberbreak}
	\theorembodyfont{\normalfont}
	\theoremsymbol{}
	\theoremseparator{} 	

	\newframedtheorem{sentencenbfr}{Sentence}
	
	\renewtheorem{sentence*}{Sentence}
	\renewtheorem{cor*}{Corollary}
	\renewtheorem{example*}{Example}
	\renewtheorem{definition*}{Definition}

% Simple theorems
	% Structuring and style
	\theoremstyle{nonumberbreak}
	\theorembodyfont{\normalfont}
	\theoremsymbol{}
	\theoremseparator{:}
	
	
\numberwithin{equation}{section} 	